# ==============================================
# Application Core Settings
# ==============================================
MODE=DEV  # Options: DEV, PROD, TEST
LOG_LEVEL=DEBUG  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ==============================================
# PostgreSQL Configuration (Docker)
# ==============================================
POSTGRES_USER=change_me
POSTGRES_PASSWORD=change_me
POSTGRES_DB=change_me

# ==============================================
# Application Database Connection
# ==============================================
DB_HOST=db
DB_PORT=5432
DB_USER=${POSTGRES_USER}  # Use the same user as above
DB_PASS=${POSTGRES_PASSWORD}  # Use the same password as above
DB_NAME=${POSTGRES_DB}  # Use the same database as above

# ==============================================
# Security & Authentication
# ==============================================
SECRET_KEY=change_me  # Generate with: openssl rand -hex 32
ALGORITHM=HS256  # JWT algorithm, e.g., (HS256, RS256)
ACCESS_TOKEN_EXPIRE_MINUTES=15  # Time in minutes, e.g., 15 for 15 minutes
REFRESH_TOKEN_EXPIRE_DAYS=30  # Time in days, e.g., 30 for 30 days

# ==============================================
# Redis & Caching
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379
CACHE_TTL=300  # Time in seconds, e.g., 300 for 5 minutes

# ==============================================
# Email Service (SMTP)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_email@gmail.com
SMTP_PASS=change_me

# ==============================================
# Frontend Integration
# ==============================================
FRONTEND_URL=http://localhost:5173  # URL of the frontend application
COOKIE_DOMAIN=  # Optional; e.g., .yourdomain.com for prod, leave blank for localhost

# ==============================================
# Monitoring & Error Tracking
# ==============================================
SENTRY_DSN=change_me  # Replace with your actual Sentry DSN

# ==============================================
# Celery Task Queue (Worker Configuration)
# ==============================================
CELERY_CONCURRENCY=1  # Number of concurrent worker processes
CELERY_AUTOSCALE=1,1  # Format: max_concurrency,min_concurrency
CELERY_POOL=solo  # Options: solo, prefork, eventlet, gevent, threads

# ==============================================
# Web Server Configuration (Gunicorn/UVicorn)
# ==============================================
WORKERS=1

# ==============================================
# Testing Configuration (Optional)
# ==============================================
# TEST_DB_HOST=db
# TEST_DB_PORT=5432
# TEST_DB_USER=change_me
# TEST_DB_PASS=change_me
# TEST_DB_NAME=change_me
